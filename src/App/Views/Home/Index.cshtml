@using Microsoft.AspNetCore.Hosting
@using Newtonsoft.Json
@inject IHostingEnvironment HostingEnvironment

<!DOCTYPE html>
<html lang="nl"
      data-app-version="@ViewBag.AppVersion">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>Financial App</title>

        <base href="/">

        @{
            await Html.RenderPartialAsync("_appmeta");
        }

        <link href="/build/app.css" rel="stylesheet" fa-versioned-file="true" fa-check-exists="true"/>
        
        <environment include="Development">
            <script>var DEBUG = true; window.DEBUG = DEBUG;</script>
        </environment>
        
        @Html.Raw(JavaScriptSnippet.FullScript)
    </head>
    <body ko-css:anonymous="!context.authentication.isAuthenticated()"
          ko-css:authenticated="context.authentication.isAuthenticated">
        <loading-bar></loading-bar>

        <top-menu></top-menu>

        <page-container class="container">
            <h1 class="navbar-brand">Financial App</h1>

            <p>
                We zijn bezig met de benodigde bestanden voor de applicatie te downloaden.
            </p>

            <div class="initial-download-indicator">
                <span class="fas fa-server" aria-hidden="true"></span>

                <span class="fas fa-file-code" aria-hidden="true"></span>

                <span class="fas fa-mobile-alt" aria-hidden="true"></span>
            </div>

            <p>
                Dit hoeft maar één keer te gebeuren, maar het kan even duren...
            </p>
        </page-container>

        <span style="color:#FFF" id="scrollBottom">&nbsp;</span>

        <noscript>
            <div class="alert alert-danger">
                <strong>Sorry!</strong> Om deze applicatie te gebruiken heb je javascript benodigd. Dit heb je niet aan staan.
            </div>
        </noscript>

        <script fa-minify="true">
            function pf(file) {
                var d = document, s = d.createElement('script');
                s.src = file; s.defer=true; s.async=false;
                d.head.appendChild(s);
            };
            function sx(s,p) {
                try {
                    window[p] = new Function(s);
                } catch(e){}
            }
            sx('(function*(){})','es6');
            sx('(async function(){})','es2017');
        </script>
        <environment include="Development">
            <script src="/build/es5/eventsource-polyfill.js" fa-polyfill-test="window.EventSource"></script>
        </environment>
        <script src="/build/es5/es6-promise.js" fa-polyfill-test="window.Promise"></script>
        <script src="/build/es5/lib.js" fa-versioned-file="true" fa-polyfill-test="window.es2017||window.es6" defer></script>
        <script src="/build/es5/app.js" fa-versioned-file="true" fa-polyfill-test="window.es2017||window.es6" defer></script>
        <script src="/build/es6/lib.js" fa-versioned-file="true" fa-polyfill-test="window.es2017" defer></script>
        <script src="/build/es6/app.js" fa-versioned-file="true" fa-polyfill-test="window.es2017" defer></script>
        <script src="/build/es2017/lib.js" fa-versioned-file="true" fa-polyfill-test="!window.es2017" defer></script>
        <script src="/build/es2017/app.js" fa-versioned-file="true" fa-polyfill-test="!window.es2017" defer></script>
    </body>
</html>